<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    android:backgroundTint="#4E4E4E">
    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="match_parent">

        <ImageView
            android:id="@+id/detailspic"
            android:layout_width="145dp"
            android:layout_height="207dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/aladdin" />

        <TextView
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/detailspic"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:text="ALADDIN"
            android:textColor="@color/white"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/releasedate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Name"
            android:layout_toRightOf="@id/detailspic"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:text="Release date: 01.01.2023"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/detailsgenre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/detailspic"
            android:layout_toRightOf="@id/detailspic"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:text="Genre: Fantasy, Comedy, Action, Romance, tralalalalalal"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/clickablemovierow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/detailspic"
            android:layout_alignBottom="@id/detailspic"
            android:clickable="true" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:backgroundTint="#4E4E4E"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/userauditorium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:text="AUDITORIUM: HALL 1"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/datescreening"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/userauditorium"
            android:layout_marginStart="5dp"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:text="Date: 01.01.2023"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/timescreening"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/datescreening"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:text="Time: 19:00"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/buyticketsbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/timescreening"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="false"
            android:layout_marginStart="5dp"
            android:backgroundTint="#FF9800"
            android:drawableLeft="@drawable/ic_baseline_local_movies_24"
            android:text="GET TICKETS" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>